package com.epam.lab1.task3.back;

import java.util.Arrays;

public class Calculation {

	public Calculation() {
	}
	
	public int[] createRow(int rowNumber){
		int[] row = new int[rowNumber*2-1];
		for (int i = 0; i < row.length; i++) {
			if(i<rowNumber){
				row[i] = i;
			}
			else {
				row[i] =row.length-i;
			}
		}
	}
}
